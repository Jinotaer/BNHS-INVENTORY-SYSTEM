                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Responsibility Center Code</label>
                        <input style="color: #000000;" type="text" class="form-control" name="responsibility_code" value="<?php echo get_field_value($item, 'responsibility_code'); ?>" required>
                    </div>
