              <?php elseif ($source_table === 'requisition_and_issue_slips'): ?>
                <h2 class="text-center mb-4 text-uppercase">Requisition and Issue Slip</h2>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Entity Name</label>
